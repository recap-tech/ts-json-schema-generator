{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Shape": {
            "allOf": [
                {
                    "type": "object",
                    "properties": {
                        "kind": {
                            "enum": [1, "rectangle", "circle"]
                        }
                    },
                    "required": ["kind"]
                },
                {
                    "if": {
                        "properties": {
                            "kind": {
                                "const": 1
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/Square"
                    }
                },
                {
                    "if": {
                        "properties": {
                            "kind": {
                                "const": "rectangle"
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/Rectangle"
                    }
                },
                {
                    "if": {
                        "properties": {
                            "kind": {
                                "const": "circle"
                            }
                        }
                    },
                    "then": {
                        "$ref": "#/definitions/Circle"
                    }
                }
            ]
        },
        "Square": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "number",
                    "const": 1
                },
                "size": {
                    "type": "number"
                }
            },
            "required": ["kind", "size"],
            "additionalProperties": false
        },
        "Rectangle": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "const": "rectangle"
                },
                "width": {
                    "type": "number"
                },
                "height": {
                    "type": "number"
                }
            },
            "required": ["kind", "width", "height"],
            "additionalProperties": false
        },
        "Circle": {
            "type": "object",
            "properties": {
                "kind": {
                    "type": "string",
                    "const": "circle"
                },
                "radius": {
                    "type": "number"
                }
            },
            "required": ["kind", "radius"],
            "additionalProperties": false
        }
    },
    "$ref": "#/definitions/Shape"
}
